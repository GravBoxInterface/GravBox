<HueLayout>:
    colorloopwidget: colorloopwidget
    xlabel: xlabel
    ylabel: ylabel
    xlabel2: xlabel2
    ylabel2: ylabel2

    BoxLayout:
        size: 1000, 500
        orientation: 'horizontal'

        ColorLoopWidget:
            xlabel: xlabel
            ylabel: ylabel
            xlabel2: xlabel2
            ylabel2: ylabel2

            id: colorloopwidget
            size: 500, 500

        BoxLayout:
            orientation: 'vertical'
            Button:
                text: 'Clear'
                on_release: root.clear_canvas()
            Label:
                id: xlabel
                text: 'x: '
                size_hint_y: 0.2
            Label:
                id: ylabel
                text: 'y: '
                size_hint_y: 0.2
            Label:
                id: xlabel2
                text: 'x2: '
                size_hint_y: 0.2
            Label:
                id: ylabel2
                text: 'y2: '
                size_hint_y: 0.2